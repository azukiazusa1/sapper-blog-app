---
import BaseLayout from '../../layouts/BaseLayout.astro'
import BlogMeta from '../../components/BlogMeta.astro'
import FileUplod from '../../components/FileUpload/Dialog'
import type { BlogPostFromtMatter } from '../../types'

export async function getStaticPaths() {
  const posts = await Astro.glob<BlogPostFromtMatter>('../../../../../contents/blogPost/*.md')
  return posts.map((post) => {
    const slug = post.frontmatter.published ? post.frontmatter.slug : post.frontmatter.id
    if (slug === null) {
      throw new Error(`slug is null. id: ${post.frontmatter.id}`)
    }
    return {
      params: { slug: post.frontmatter.published ? post.frontmatter.slug : post.frontmatter.id },

      props: { post },
    }
  })
}

interface Props {
  post: Awaited<ReturnType<typeof getStaticPaths>>[number]['props']['post']
}

const { post } = Astro.props
---

<BaseLayout>
  <div class="flex flex-col">
    <BlogMeta post={post} />

    <div class="my-12">
      <article class="max-w-5xl mx-auto">
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow-lg">
          <div id="contents">
            <post.Content />
          </div>
        </div>
      </article>
    </div>
    <FileUplod client:only />
  </div>
</BaseLayout>
