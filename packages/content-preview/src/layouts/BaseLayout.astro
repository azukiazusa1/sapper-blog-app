---
import Sidebar from '../components/Sidebar.astro'
import '../styles/global.css'
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />
    <title>Preview Blog Post</title>
  </head>
  <body>
    <div class="min-h-screen text-neutral-900 bg-gray-100 dark:bg-gray-800 dark:text-gray-50 grid grid-cols-7">
      <div id="sidebar" class="self-start sticky top-0 col-span-1">
        <Sidebar />
      </div>
      <div id="mini-sidebar" class="hidden absolute top-4 left-3">
        <button id="open-sidebar" class="w-10 h-10 rounded-full hover:bg-gray-100 dark:hover:bg-gray-500">➡️</button>
      </div>
      <main class="col-span-6">
        <slot />
      </main>
    </div>
  </body>
</html>

<script>
  const toggleSidebar = () => {
    const sidebar = document.querySelector('#sidebar')
    const miniSidebar = document.querySelector('#mini-sidebar')
    const main = document.querySelector('main')
    sidebar.classList.toggle('hidden')
    miniSidebar.classList.toggle('hidden')
    main.classList.toggle('col-span-6')
    main.classList.toggle('col-span-7')
  }
  const button = document.querySelector('#close-sidebar')
  const openButton = document.querySelector('#open-sidebar')
  button.addEventListener('click', toggleSidebar)
  openButton.addEventListener('click', toggleSidebar)
</script>
